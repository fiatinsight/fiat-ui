<% align ||= nil %>

<% if align == 'center' %>
  <div class="col-12 text-center">
    <h1 class="mb-2"><%= title %></h1>
    <p class="text-gray font-italic"><%= subtitle %></p>
  </div>
<% elsif align == 'left' %>
  <div class="col-12 text-left">
    <h1 class="mb-2"><%= title %></h1>
    <p class="text-gray font-italic"><%= subtitle %></p>
  </div>
<% end %>
