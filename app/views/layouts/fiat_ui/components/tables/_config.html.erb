<% title ||= false %>
<% header ||= false %>
<% columns ||= [] %>
<% paginate ||= false %>
<% per_page ||= 25 %>
<% namespace ||= nil %>
<% cache_status ||= false %>
<% cache_scope ||= "#{controller_path}/#{action_name}" %>
<% cache_expire ||= false %>
<% style ||= nil %>
<% variables ||= nil %>
<% data_controller ||= nil %>
<% data_action ||= nil %>

<% if paginate %>
  <% items = items.paginate(page: params[:page], per_page: per_page) %>
<% end %>

<% if title %>
  <h6><%= title %></h6>
<% end %>
<div class="table-responsive">
  <table class="table <%= style %>" <% if data_controller %>data-controller="<%= data_controller %>"<% end %> <% if data_action %>data-action="<%= data_action %>"<% end %>>
    <%= render partial: 'layouts/fiat_ui/components/tables/header', locals: { header: header, columns: columns, variables: variables } %>
    <%= render partial: 'layouts/fiat_ui/components/tables/body', locals: { items: items, type: type, cache_scope: cache_scope, cache_status: cache_status, cache_expire: cache_expire, namespace: namespace, variables: variables } %>
  </table>
</div>

<% if paginate %>
  <%= will_paginate items.paginate(page: params[:page], per_page: per_page) %>
<% end %>
